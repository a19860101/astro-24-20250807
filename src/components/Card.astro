---
import Btn from "./Btn.astro"
const {url, data} = Astro.props
---
<div class="card">
    <div class="card-hero">
        <img src=`images/${data.hero.src}` alt={data.hero.alt}>
    </div>
    <h3>{data.title}</h3>
    <Btn url={url} text="繼續閱讀"></Btn>
</div>
<style>
    .card {
        display: flex;
        flex-direction: column;
        align-items: start;
        gap: 15px;
        img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            aspect-ratio: 16/9;
        }
        h3 {
            font-size: 20px;
            margin-bottom: 0;
        }
    }
    
</style>